include _head

.layout-wrap

    header.layout-header
        .header-left-top 
            .block-social__top 
                ul.social__top__list
                    li.social__top__item
                        a(href="https://vk.com/varden.adams" target="_blank" title="My VK")
                            svg.svg-icon__top-1
                                use(xlink:href="./assets/sprite/sprite.svg#vk")
                    li.social__top__item 
                        a(href="https://github.com/ivarden" target="_blank" title="My GitHub")
                            svg.svg-icon__top-2
                                use(xlink:href="./assets/sprite/sprite.svg#github")
                    li.social__top__item
                        a(href="https://www.linkedin.com/in/ivarden" target="_blank" title="My Linkedin")
                            svg.svg-icon__top-3
                                use(xlink:href="./assets/sprite/sprite.svg#in")

        .header-right-top
            a.block-nav.rotate(href="#main__block3")

        .header-bottom
            .block-foto
                .wrap-foto
                    img.circle-foto(src="./assets/img/me.jpg" alt="Foto of Varden Adamchuk")

            .block-description
                .title-description Varden Adamchuk
                .text-description Личный сайт веб разработчика

            .block-nav__down
                .angle-down(href="#main__block3")

            svg.decoration__traingle(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 1000 85', preserveaspectratio='none')
                polygon.decoration__traingle-1(points='0,0   0,86   500.8,86   500.8,75.5')
                polygon.decoration__traingle-2(points='1000,0   1000,86   500,86   500,75.5')

    main.layout-main
        .main-left
            .block-title
                block titleL
            .block-foto
                block fotoL
            .block-title-description
                block title-descriptionL
            .block-text
                block textL

        .main-right
            .block-title-description
                block title-descriptionR
            .block-skills
                block skillsR
            .block-text
                block textR
        .main-bottom
            .block-map
                block map

        
    footer.layout-footer
        .footer-left-top
            block footer-left-top
        .footer-right-top
            block footer-right-top
        .footer-bottom
            block footer-bottom




